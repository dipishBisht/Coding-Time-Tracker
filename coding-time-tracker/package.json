{
  "name": "coding-time-tracker",
  "displayName": "Coding Time Tracker",
  "description": "Track your daily coding time automatically",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coding-time-tracker.showStats",
        "title": "Coding Time: Show Today's Stats"
      },
      {
        "command": "coding-time-tracker.configure",
        "title": "Coding Time: Configure Firebase"
      },
      {
        "command": "coding-time-tracker.reset",
        "title": "Coding Time: Reset Extension (DEV)"
      },
      {
        "command": "coding-time-tracker.testWrite",
        "title": "Coding Time: Test Write"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.7",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "uuid": "^13.0.0"
  }
}
